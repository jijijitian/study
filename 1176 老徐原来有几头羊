#include <iostream>
using namespace std;

int judge(int n)
{
    int num = 3;
    for (int i = 0; i < n; i++)
    {
        num = (num - 1) * 2;
    }
    return num;
}

int main()
{
    int n, num;
    cin >> n;
    for (int i = 0; i < n; i++)
    {
        cin >> num;
        cout << judge(num) << endl;
    }
}
